<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="500.0" minWidth="1000.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fxmldemo.DeleteEventController">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="All Events">
               <font>
                  <Font name="Serif Italic" size="29.0" />
               </font>
            </Label>
            <Label alignment="TOP_CENTER" text="Please click on the event you want to delete, then hit the submit button!" textFill="#bfa950">
               <font>
                  <Font name="Serif Regular" size="26.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <Label text="Warning: You cannot get the event back!" textFill="#da2424">
               <font>
                  <Font name="Serif Regular" size="24.0" />
               </font>
               <opaqueInsets>
                  <Insets bottom="10.0" />
               </opaqueInsets>
               <padding>
                  <Insets bottom="10.0" top="20.0" />
               </padding>
            </Label>
            <ListView fx:id="eventsView" minHeight="300.0" minWidth="300.0" prefHeight="300.0" prefWidth="300.0" />
            <Button mnemonicParsing="false" onAction="#deleteEvent" text="Delete Event" textFill="#d31986">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <font>
                  <Font name="Serif Regular" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children></VBox>
   </center>
</BorderPane>
